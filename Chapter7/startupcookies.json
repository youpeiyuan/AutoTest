[
  {
    "description":"这是一个会返回cookird信息的请求",
    "request":{
      "uri":"/getcookies",
      "method":"get"
    },
    "response":{
      "headers":{
        "Content-Type":"text/html;charset=gbk"
      },
      "cookies":{
        "login":"true",
        "status":"200"
      },
      "text":"恭喜你获取cookies成功"
    }
  },

  {
    "description":"这是携带cookies信息的get请求",
    "request":{
      "uri":"/get/cookies",
      "method":"get",
      "cookies":{
        "login":"true"
      }
    },
    "response":{
      "headers": {
        "Content-Type": "text/html;charset=gbk"
      },
      "text":"这是需要携带cookies信息才能访问的Get请求"
    }
  },
  {
    "description":"这是一个带cookies的post请求",
    "request":{
      "uri":"/post/cookies",
      "method":"post",
      "cookies":{
        "login":"true"
      },
      "json":{
        "name":"yanglihua",
        "age":"18"
      }
    },
    "response":{
      "status":200,
      "json":{
        "status":1,
        "yanglihua":"success"
      }
    }
  }
]